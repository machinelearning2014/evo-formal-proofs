=== LEAN 4 CODE ===

```lean
import Mathlib.Data.Nat.Prime
import Mathlib.Tactic

open Nat

/--
Euclid's theorem: For any natural number n, there exists a prime number p ≥ n.
This proves that there are infinitely many prime numbers.
-/
theorem exists_prime_ge (n : ℕ) : ∃ p, n ≤ p ∧ p.Prime := by
  -- Base case: if n ≤ 2, we can use 2 as our prime
  by_cases h : n ≤ 2
  · use 2
    constructor
    · omega
    · exact prime_two
    
  · -- n ≥ 3
    have hn : 3 ≤ n := by omega
    
    -- Consider N = n! + 1
    let N := n.factorial + 1
    
    -- N > 1
    have hN_gt_one : 1 < N := by
      have : 1 ≤ n.factorial := factorial_pos n
      omega
    
    -- N has a prime factor p (since every integer > 1 has a prime factor)
    rcases exists_prime_and_dvd hN_gt_one with ⟨p, hp_prime, hp_dvd⟩
    
    -- We claim that p > n
    have hp_gt_n : n < p := by
      by_contra! H  -- Assume p ≤ n
      -- Then p divides n!
      have h_fact : p ∣ n.factorial :=
        dvd_factorial (Prime.pos hp_prime) H
      
      -- Since p divides both n! and n! + 1, it divides their difference: 1
      have h_one : p ∣ 1 := by
        have : p ∣ (N - n.factorial) :=
          Nat.dvd_sub (hp_dvd) h_fact
        have : N - n.factorial = 1 := by
          simp [N]
        rw [this] at this
        exact this
      
      -- But p > 1 (since it's prime), contradiction
      have hp_gt_one : 1 < p := Prime.one_lt hp_prime
      have : p ≤ 1 := le_of_dvd (by omega) h_one
      omega
    
    -- p is our desired prime
    use p
    constructor
    · omega
    · exact hp_prime

/--
Corollary: The set of prime numbers is infinite.
This is equivalent to the previous theorem.
-/
theorem infinite_primes : Set.Infinite {p : ℕ | p.Prime} := by
  intro h_finite
  -- If the set were finite, it would have a maximum element M
  rcases Set.Finite.bddAbove h_finite with ⟨M, hM⟩
  -- But by exists_prime_ge, there exists a prime > M
  rcases exists_prime_ge (M + 1) with ⟨p, hp_ge, hp_prime⟩
  have hp_mem : p ∈ {p : ℕ | p.Prime} := hp_prime
  have : p ≤ M := hM hp_mem
  omega

-- Example: Find a prime ≥ 1000
example : ∃ p, 1000 ≤ p ∧ p.Prime := by
  apply exists_prime_ge 1000

-- The theorem in mathlib is called Nat.exists_infinite_primes
#check Nat.exists_infinite_primes
```

